<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommandCenterActivity">

    <TextView
        android:id="@+id/textView_commandCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="528dp"
        android:text="@string/command_center"
        android:textColor="#673AB7"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="532dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="192dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_newOrder"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:text="@string/new_order" />

        <Button
            android:id="@+id/button_addProduct"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:text="@string/add_product" />

        <Button
            android:id="@+id/button_playMusic"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:onClick="onclick_play_music_in_bg_btn"
            android:text="@string/play_music_in_background" />

        <Button
            android:id="@+id/button_stopMusic"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:onClick="onclick_stop_music_in_bg_btn"
            android:text="@string/stop_music_in_background" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>